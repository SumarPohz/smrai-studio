  }

  .footer-columns {
    width: 100%;               /* stretch with screen */
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 1rem;                 /* ↓ was 1.5rem */
    padding-bottom: 0.75rem;   /* ↓ was 1.25rem */
    border-bottom: 1px solid #d1d5db;
  }

  .footer-col {
    flex: 1 1 160px;
    min-width: 160px;
  }

  .footer-col h4 {
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    margin-bottom: 0.6rem;     /* slightly tighter */
    color: #111827;
  }

  .footer-card {
    display: block;
    margin-bottom: 0.35rem;    /* ↓ was 0.5rem */
    padding: 0.45rem 0.8rem;   /* ↓ was 0.55rem 0.9rem */
    border-radius: 12px;
    background: #ffffff;
    color: #111827;
    text-decoration: none;
    font-size: 0.9rem;
    box-shadow: 0 1px 2px rgba(15, 23, 42, 0.06);
    border: 1px solid #e5e7eb;
    transition: transform 0.12s ease, box-shadow 0.12s ease, border-color 0.12s ease;
  }

  .footer-card:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(15, 23, 42, 0.12);
    border-color: #facc15;
  }

  /* ====== SOCIAL ICONS ====== */
  .footer-social {
    text-align: left;
  }

  .social-icons {
    margin-top: 0.6rem;        /* ↓ was 0.8rem */
    display: flex;
    gap: 0.6rem;
  }

  .social-icons a {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: #d1d5db;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #111827;
    font-size: 0.9rem;
    transition: all 0.25s ease;
  }

  .social-icons a:hover {
    background: #facc15; /* gold hover for AI theme */
    color: #111827;
    transform: translateY(-2px);
  }

  .footer-bottom {
    width: 100%;               /* stretch with screen */
