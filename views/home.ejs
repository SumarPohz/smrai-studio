<style>
  /* ‚îÄ‚îÄ Home page 3D background ‚îÄ‚îÄ */
  .home-bg-scene {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    overflow: hidden;
  }

  /* Dot-grid overlay for depth */
  .hblob-grid {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, rgba(99,102,241,0.07) 1px, transparent 1px);
    background-size: 30px 30px;
  }

  .hblob {
    position: absolute;
    border-radius: 50%;
    filter: blur(110px);
    animation: hblobDrift ease-in-out infinite alternate;
  }

  /* Blue orb ‚Äî top left */
  .hblob-1 {
    width: 580px;
    height: 580px;
    background: radial-gradient(circle at 40% 40%, #3b82f6, #1d4ed8);
    opacity: 0.18;
    top: -180px;
    left: -160px;
    animation-duration: 18s;
    animation-delay: 0s;
  }

  /* Teal orb ‚Äî top right */
  .hblob-2 {
    width: 480px;
    height: 480px;
    background: radial-gradient(circle at 60% 40%, #06b6d4, #0ea5e9);
    opacity: 0.14;
    top: -80px;
    right: -120px;
    animation-duration: 22s;
    animation-delay: -7s;
  }

  /* Indigo orb ‚Äî bottom center */
  .hblob-3 {
    width: 420px;
    height: 420px;
    background: radial-gradient(circle at 50% 60%, #6366f1, #8b5cf6);
    opacity: 0.12;
    bottom: -100px;
    left: 30%;
    animation-duration: 26s;
    animation-delay: -13s;
  }

  /* Soft green orb ‚Äî mid right */
  .hblob-4 {
    width: 320px;
    height: 320px;
    background: radial-gradient(circle at 50% 50%, #10b981, #059669);
    opacity: 0.10;
    top: 40%;
    right: 5%;
    animation-duration: 20s;
    animation-delay: -5s;
  }

  @keyframes hblobDrift {
    0%   { transform: translate(0px,   0px)  scale(1);    }
    33%  { transform: translate(30px, -35px) scale(1.04); }
    66%  { transform: translate(-25px, 20px) scale(0.97); }
    100% { transform: translate(15px,  40px) scale(1.02); }
  }

  /* Ensure all page content renders above the background */
  .page-container,
  nav, header, footer,
  .navbar, .site-footer {
    position: relative;
    z-index: 1;
  }

</style>

