<div class="min-header">
  <h2 class="min-name"><%= data.fullName || "" %></h2>
  <p class="min-role"><%= data.roleTitle || "" %></p>
  <div class="min-contact">
    <span><strong>ğŸ“</strong> <%= data.phone || "" %></span>
    <span><strong>âœ‰ï¸</strong> <%= data.email || "" %></span>
    <% if (data.location) { %>
      <span><strong>ğŸ“</strong> <%= data.location %></span>
    <% } %>
  </div>
</div>

<div class="min-section">
  <h3>Professional Summary</h3>
  <p><%= data.summary || "" %></p>
</div>

<div class="min-section">
  <h3>Experience</h3>
  <% if (experienceItems.length) { %>
    <% experienceItems.forEach(exp => { %>
      <div class="exp-entry">
        <div class="exp-heading">
          <span class="exp-title"><strong><%= exp.title %></strong><% if (exp.company) { %> <em class="exp-company"> Â· <%= exp.company %></em><% } %></span>
          <% if (exp.dates) { %><span class="exp-dates"><%= exp.dates %></span><% } %>
        </div>
        <% if (exp.description) { %><div class="exp-body"><%= exp.description %></div><% } %>
      </div>
    <% }) %>
  <% } else { %>
    <p class="exp-text"><%= data.experience || "" %></p>
  <% } %>
</div>

<div class="min-section">
  <h3>Education</h3>
  <p><%= data.education || "" %></p>
</div>

<div class="min-section">
  <h3>Skills</h3>
  <% if (skillsLines.length) { %>
    <ul>
      <% skillsLines.forEach(line => { %>
        <li><%= line %></li>
      <% }) %>
    </ul>
  <% } else { %>
    <p><%= data.skills || "" %></p>
  <% } %>
</div>

<div class="min-section">
  <h3>Languages</h3>
  <p><%= data.languages || "" %></p>
</div>
