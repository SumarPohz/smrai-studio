<div class="es-body">
  <div class="es-section">
    <h3>Professional Summary</h3>
    <p><%= data.summary || "" %></p>
  </div>

  <div class="es-section">
    <h3>Experience</h3>
    <% if (experienceItems.length) { %>
      <% experienceItems.forEach(exp => { %>
        <div class="es-exp-item">
          <div class="es-exp-header">
            <strong><%= exp.title %></strong><% if (exp.company) { %> <em class="exp-company"> Â· <%= exp.company %></em><% } %>
            <% if (exp.dates) { %>
              <span class="es-exp-dates"><%= exp.dates %></span>
            <% } %>
          </div>
          <% if (exp.description) { %>
            <p class="es-exp-desc"><%= exp.description %></p>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p><%= data.experience || "" %></p>
    <% } %>
  </div>

  <div class="es-two-col">
    <div class="es-section">
      <h3>Education</h3>
      <p><%= data.education || "" %></p>
    </div>

    <div class="es-section">
      <h3>Languages</h3>
      <p><%= data.languages || "" %></p>
    </div>
  </div>

  <div class="es-section">
    <h3>Skills</h3>
    <% if (skillsLines.length) { %>
      <div class="es-skills">
        <% skillsLines.forEach(line => { %>
          <span class="es-skill"><%= line %></span>
        <% }) %>
      </div>
    <% } else { %>
      <p><%= data.skills || "" %></p>
    <% } %>
  </div>
</div>
