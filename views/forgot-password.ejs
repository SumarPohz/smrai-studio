<%- include("partials/header") %>

<section>
  <h1>Forgot Password</h1>
  <p>Enter your registered email. If an account exists, an OTP will be sent.</p>

  <% if (message) { %>
    <div class="alert-success"><p><%= message %></p></div>
  <% } %>

  <% if (error) { %>
    <div class="alert-error"><p><%= error %></p></div>
  <% } %>

  <form action="/forgot-password" method="POST" class="form-card">
    <label for="email">Registered Email</label>
    <input type="email" id="email" name="email" required />
    <button type="submit">Send OTP</button>
  </form>

  <p style="margin-top:1rem;">
    <a href="/login">Back to Login</a>
  </p>
</section>

<%- include("partials/footer") %>
