<%- include("partials/header") %>

<section class="page-section">
  <div class="page-header-row">
    <div>
      <h1>Your Resumes</h1>
      <p class="section-subtitle">
        All the resumes you've created with SmrAI-Studio. You can reuse details across templates.
      </p>
    </div>

    <a href="/resume-builder" class="btn-primary">
      + Create New Resume
    </a>
  </div>

  <% if (!resumes || resumes.length === 0) { %>
    <div class="empty-state-card">
      <h3>No resumes yet</h3>
      <p>Start by creating your first resume. It only takes a few minutes.</p>
      <a href="/resume-builder" class="btn-primary">Start Resume Builder</a>
    </div>
  <% } else { %>
    <div class="table-wrapper">
      <table class="nice-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Template</th>
            <th>Downloads</th>
            <th>Prints</th>
            <th>Last Updated</th>
          </tr>
        </thead>
        <tbody>
          <% resumes.forEach(r => { %>
            <tr>
              <td>
                <strong><%= r.title || 'Untitled Resume' %></strong>
              </td>
              <td>
                <span class="badge">
                  <%= (r.template || 'modern-1').replace('-', ' ').toUpperCase() %>
                </span>
              </td>
              <td><%= r.downloads_count || 0 %></td>
              <td><%= r.prints_count || 0 %></td>
              <td>
                <%= r.updated_at ? new Date(r.updated_at).toLocaleString("en-IN") : "-" %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</section>

<style>
  .page-section {
    max-width: 980px;
    margin: 1.5rem auto 2.5rem;
    padding: 0 1rem 1rem;
  }

  .page-header-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 0.9rem;
    color: #6b7280;
  }

  .table-wrapper {
    overflow-x: auto;
    margin-top: 0.75rem;
  }

  .nice-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
  }

  .nice-table th,
  .nice-table td {
    padding: 0.6rem 0.75rem;
    border-bottom: 1px solid #e5e7eb;
    text-align: left;
    white-space: nowrap;
  }

  .nice-table th {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #6b7280;
  }

  .nice-table tbody tr:hover {
    background: #f9fafb;
  }

  .badge {
    display: inline-block;
    padding: 0.15rem 0.5rem;
    border-radius: 999px;
    font-size: 0.75rem;
    background: #eff6ff;
    color: #1d4ed8;
    border: 1px solid #bfdbfe;
  }

  .empty-state-card {
    margin-top: 1.5rem;
    padding: 1.5rem 1.75rem;
    border-radius: 16px;
    border: 1px dashed #e5e7eb;
    background: #f9fafb;
  }

  .empty-state-card h3 {
    margin-bottom: 0.25rem;
  }

  .empty-state-card p {
    color: #6b7280;
    margin-bottom: 0.75rem;
  }
</style>

<%- include("partials/footer") %>
